rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow read access on all files
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow write access on all files for authenticated users
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
