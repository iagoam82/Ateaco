rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    match /admins/{adminId} {
      allow read, write: if isAdmin();
    }

    match /{path=**} {
      allow read: if true;
    }

    match /{document=**} {
      allow write: if isAdmin();
    }
  }
}
